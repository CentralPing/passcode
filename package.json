{
  "name": "passcode",
  "version": "0.0.1",
  "description": "A slightly opinionated stateless passcode manager.",
  "main": "lib/index.js",
  "module": "lib/main.js",
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "lint": "eslint \"${INIT_CWD}/**/*.js\"",
    "pretest": "npm run lint",
    "test": "jest",
    "watch": "npm test -- --watch --coverage",
    "prepublishOnly": "npm test -- --coverage",
    "publish": "coveralls < coverage/lcov.info",
    "docs": "jsdoc2md -t docs/readme.hbs --files lib/*.js > README.md"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/CentralPing/passcode"
  },
  "keywords": [
    "password",
    "passwordless",
    "no-password",
    "passcode",
    "authentication",
    "token",
    "jwt",
    "json-web-token",
    "stateless"
  ],
  "author": "Jason Cust <jason@centralping.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/CentralPing/passcode/issues"
  },
  "homepage": "https://github.com/CentralPing/passcode",
  "dependencies": {
    "esm": "^3.0.34",
    "jsonwebtoken": "^8.2.1",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "coveralls": "^3.0.1",
    "eslint": "^4.19.1",
    "eslint-config-google": "^0.9.1",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jest": "^21.15.0",
    "eslint-plugin-node": "^6.0.1",
    "jest": "^22.4.3",
    "jsdoc-to-markdown": "^4.0.1"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "collectCoverage": false,
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 100,
        "lines": 80,
        "statements": -10
      }
    },
    "testRegex": ".*spec\\.(unit|func|e2e)\\.js"
  }
}
